<p style="color: green"><%= notice %></p>
<div class="jumbotron">
  <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
  <p class="lead"><%= @friend.email %> |  <%= @friend.phone_number %> </p>
  <hr class="my-4">
  <p><%= @friend.address %> |  <%= @friend.twitter %></p>
  <%= link_to "Edit this friend", edit_friend_path(@friend) , class:"btn btn-secondary"%> 
  <%= link_to "Back to friends", friends_path, class:"btn btn-secondary my-2" %>

  <%= button_to "Destroy this friend", @friend, method: :delete, class:"btn btn-outline-danger" %>
</div>


